# RuVector PostgreSQL Database Configuration for Omega-Longevity
# Copy this file to .env and update the values as needed

# Database URL format: postgres://username:password@host:port/database
RUVECTOR_DATABASE_URL=postgres://omega:longevity@localhost:5434/omega_longevity

# Connection pool settings
RUVECTOR_MAX_CONNECTIONS=20
RUVECTOR_TIMEOUT=30

# Vector embedding configuration (384-dimensional gene embeddings)
RUVECTOR_EMBEDDING_DIM=384

# Index type: HNSW or IVFFlat
RUVECTOR_INDEX_TYPE=HNSW

# HNSW parameters (tune for your use case)
RUVECTOR_HNSW_M=16
RUVECTOR_HNSW_EF_CONSTRUCTION=64
RUVECTOR_HNSW_EF_SEARCH=40

# Schema
RUVECTOR_SCHEMA=public

# Performance
RUVECTOR_BATCH_SIZE=1000
RUVECTOR_ENABLE_SIMD=true

# Logging
RUST_LOG=info
RUVECTOR_LOG_LEVEL=info
SQLX_LOG=warn
